<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Quiz Master</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: 'Georgia', serif;
      background-color: #eef7f9;
      overflow: hidden;
    }

    .floating-letter {
      position: absolute;
      font-size: 28px;
      font-weight: bold;
      animation: floatDown 10s linear infinite;
      color: hsl(var(--hue), 70%, 50%);
      opacity: 0.8;
    }

    @keyframes floatDown {
      0% {
        transform: translateY(-120vh) rotate(0deg);
        opacity: 1;
      }
      30% {
        opacity: 1;
      }
      100% {
        transform: translateY(100vh) rotate(360deg);
        opacity: 1;
      }
    }

    .container {
      position: relative;
      z-index: 2;
      text-align: center;
      padding-top: 60px;
    }

    .logo {
      font-size: 48px;
      font-weight: bold;
      color: #2e00a3;
      margin-bottom: 40px;
    }

    .logo span {
      display: block;
      font-size: 36px;
    }

    .button-box {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 20px;
    }

    .btn {
      background-color: white;
      padding: 20px 60px;
      border-radius: 15px;
      text-decoration: none;
      font-size: 22px;
      font-weight: bold;
      color: #2e00a3;
      border: none;
      cursor: pointer;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      transition: transform 0.2s;
    }

    .btn:hover {
      transform: scale(1.05);
    }

    .or {
      font-size: 26px;
      font-weight: bold;
      color: #2e00a3;
    }

    .share-icons {
      position: absolute;
      top: 20px;
      right: 20px;
      font-size: 18px;
      color: #2e00a3;
    }

    .share-icons span {
      margin-left: 10px;
      cursor: pointer;
    }
  </style>
</head>
<body>

  <!-- Floating Letters -->
  <script>
    const letters = "abcdefghijklmnopqrstuvwxyz".toUpperCase().split('');
    for (let i = 0; i < 30; i++) {
      const letter = document.createElement('span');
      letter.className = 'floating-letter';
      letter.style.left = Math.random() * 100 + 'vw';
      letter.style.animationDelay = Math.random() * 5 + 's';
      letter.style.setProperty('--hue', Math.floor(Math.random() * 360));
      letter.textContent = letters[Math.floor(Math.random() * letters.length)];
      document.body.appendChild(letter);
    }
  </script>

  <!-- Main Content -->
  <div class="container">
    <div class="logo">Quiz<br><span>Master</span></div>

    <div class="button-box">
      <a href="/random?text=Random" class="btn">Random</a>
      <div class="or">Or</div>
      <a href="/select" class="btn">Select a Category</a>
    </div>
  </div>

  <!-- Share Icons -->
  <div class="share-icons">
    Share this:
    <span>f</span>
    <span>t</span>
    <span>in</span>
  </div>

</body>
</html>
